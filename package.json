{
  "name": "vutron",
  "version": "1.0.0",
  "description": "Quick Start Templates for Vite + Vue 3 + Electron",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development vite",
    "build": "cross-env NODE_ENV=production vite build && electron-builder -wml",
    "build:dir": "cross-env NODE_ENV=production vite build && electron-builder --dir",
    "build:mac": "cross-env NODE_ENV=production vite build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac",
    "build:linux": "cross-env NODE_ENV=production vite build && electron-builder --linux",
    "build:win": "cross-env NODE_ENV=production vite build && electron-builder --windows",
    "lint": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter src",
    "lint:fix": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix src",
    "postinstall": "npm run lint:fix && electron-builder install-app-deps"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "author": "jooy2 <jootc.help@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "pinia": "^2.0.22",
    "vue": "^3.2.39",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.1.5",
    "vuetify": "^3.0.0-beta.13"
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-transform-runtime": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@vitejs/plugin-vue": "^3.1.2",
    "@vue/babel-plugin-jsx": "^1.1.1",
    "cross-env": "^7.0.3",
    "electron": "^21.0.0",
    "electron-builder": "^23.3.3",
    "eslint": "^8.24.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-vue": "^9.5.1",
    "vite": "^3.1.4",
    "vite-plugin-electron": "^0.9.3",
    "vue-eslint-parser": "^9.1.0"
  }
}
