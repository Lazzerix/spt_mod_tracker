{
  "name": "vutron",
  "version": "1.0.0",
  "description": "Quick Start Templates for Vite + Vue 3 + Electron",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "NODE_ENV=development vite",
    "build": "NODE_ENV=production vite build && electron-builder",
    "build:dir": "NODE_ENV=production vite build && electron-builder --dir",
    "build:mac": "NODE_ENV=production vite build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac",
    "build:linux": "NODE_ENV=production vite build && electron-builder --linux",
    "build:win": "NODE_ENV=production vite build && electron-builder --windows",
    "lint": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter src",
    "lint:fix": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix src",
    "postinstall": "npm run lint:fix && electron-builder install-app-deps"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "author": "jooy2 <jootc.help@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "eslint-friendly-formatter": "^4.0.1",
    "pinia": "^2.0.22",
    "vue": "^3.2.39",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.1.5",
    "vuetify": "^3.0.0-beta.13"
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-transform-runtime": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@vitejs/plugin-vue": "^3.1.2",
    "@vue/babel-plugin-jsx": "^1.1.1",
    "electron": "^21.0.0",
    "electron-builder": "^23.3.3",
    "eslint": "^8.24.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-vue": "^9.5.1",
    "vite": "^3.1.4",
    "vite-plugin-electron": "^0.9.3",
    "vue-eslint-parser": "^9.1.0"
  },
  "build": {
    "productName": "Vutron",
    "appId": "com.vutron.vutron",
    "compression": "maximum",
    "directories": {
      "buildResources": "buildRes",
      "output": "./dist/release/${version}"
    },
    "files": [
      "dist/**/*",
      "!dist/release/**/*"
    ],
    "artifactName": "${productName} ${version}.${ext}",
    "mac": {
      "bundleVersion": "1.0",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "icon": "buildRes/icons/icon.icns",
      "type": "distribution",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64",
            "universal"
          ]
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ],
      "sign": false
    },
    "win": {
      "icon": "buildRes/icons/icon.ico",
      "target": [
        {
          "target": "appx",
          "arch": "x64"
        },
        {
          "target": "zip",
          "arch": "x64"
        },
        {
          "target": "portable",
          "arch": "x64"
        },
        {
          "target": "nsis",
          "arch": "x64"
        }
      ]
    },
    "portable": {
      "artifactName": "${productName} ${version} Portable.${ext}"
    },
    "nsis": {
      "oneClick": true
    },
    "linux": {
      "executableName": "vutron",
      "icon": "buildRes/icons",
      "category": "Utility",
      "target": [
        {
          "target": "snap",
          "arch": "x64"
        },
        {
          "target": "deb",
          "arch": "x64"
        },
        {
          "target": "rpm",
          "arch": "x64"
        }
      ]
    }
  }
}
