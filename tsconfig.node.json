{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "nodenext",
    "composite": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "src/main",
    "src/preload",
    "package.json",
    "eslint.config.ts",
    "vite.config.mts",
    "buildAssets/builder",
    "tests/**/*.ts",
    "tests/**/*.mts",
    "tests/**/*.spec.ts"
  ]
}
